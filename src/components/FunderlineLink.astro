---
interface Props {
  classes?: string
  href: string
}

const { href, classes } = Astro.props
---

<a href={href} class={`${classes} funderline`}>
  <slot />
</a>

<style>
  .funderline {
    position: relative;
    padding: 0.1em 0;
  }
  .funderline::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: #6991ac;
    opacity: 0;
    transition:
      opacity 300ms,
      transform 300ms;
  }
  .funderline:hover::after,
  .funderline:focus::after {
    opacity: 1;
    transform: translate3d(0, 0.2em, 0);
  }
</style>
