---
import FunderlineLink from './FunderlineLink.astro'
---

<header class='fixed flex justify-center w-full'>
  <div class='flex items-center justify-center max-w-screen-lg'>
    <nav
      class='w-screen px-8 py-2 flex gap-4 justify-between backdrop-blur-md bg-white/30'
    >
      <span class='font-bold hidden sm:inline'>@mikedloss</span>
      <ul class='flex gap-2'>
        <li>
          <FunderlineLink href='#about'>about</FunderlineLink>
        </li>
        <li>
          <FunderlineLink href='#work'>work</FunderlineLink>
        </li>
        <li>
          <FunderlineLink href='#contact'>contact</FunderlineLink>
        </li>
      </ul>
      <FunderlineLink
        href='mailto:hey@mikedloss.co'
        classes={'hidden sm:block'}
      >
        hey@mikedloss.co
      </FunderlineLink>
    </nav>
  </div>
</header>

<style>
  .funderline {
    position: relative;
    padding: 0.1em 0;
  }
  .funderline::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: #6991ac;
    opacity: 0;
    transition:
      opacity 300ms,
      transform 300ms;
  }
  .funderline:hover::after,
  .funderline:focus::after {
    opacity: 1;
    transform: translate3d(0, 0.2em, 0);
  }
</style>
